{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1500,
    "height": 650,
    "projection": {"type": "albersUsa"},
    "config": {"background": ""},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/TanJefman2/3179-homework-w9/main/homework%209/js/states-10m.topojson",
          "format": {"type": "topojson", "feature": "states"}
        },
        "transform": [
           {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "../data/pizza_count_by_state.csv"
            },
            "key": "province",
            "fields": ["restaurant_count"]
          }
        },
        {"calculate": "datum.restaurant_count", "as": "Pizza Shop Count"}
        
      ],
        "mark": {"type": "geoshape", "stroke": "black"},
        
        "encoding": {
          "color": {
            "field": "Pizza Shop Count",
            "type": "quantitative",
            "scale": {"type": "log"}
            
          },
          "tooltip": [
            {"field": "properties.name", "type": "nominal", "title": "State"},
            {"field": "Pizza Shop Count", "type": "quantitative", "title": "Number of pizzas shop"}
          ]
        }
        
      },
      
      {
        "data": {
          "url": "https://raw.githubusercontent.com/TanJefman2/3179-homework-w9/main/homework%209/data/Datafiniti_Pizza_Restaurants_and_the_Pizza_They_Sell_May19.csv"
        },
        
      "transform": [{
        "filter": "datum.longitude != '' && datum.latitude != ''"
      }],
        "mark": {"type": "circle", "fill":"black", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "tooltip": [
            {"field": "name", "type": "nominal", "title": "Restaurant Name"},
            {"field": "primaryCategories", "type": "nominal", "title": "Categories"},
            {"field": "address", "type": "nominal", "title": "Address"},
            {"field": "city", "type": "nominal", "title": "City"},
            {"field": "province", "type": "nominal", "title": "State"}
          ]
          
        }
      }
    ]
  }

  